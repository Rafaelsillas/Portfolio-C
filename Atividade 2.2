float mediaTurma(int numAlunos);
float mediaEscola(int numTurmas);
int main() {
int numTurmas;
printf(&quot;Digite o número de turmas: &quot;);
scanf(&quot;%d&quot;, &amp;numTurmas);
printf(&quot;A média geral da escola é: %.2f\n&quot;, mediaEscola(numTurmas));
