int maior(int vet[], int n) {
int maior = vet[0], pos = 0;
for (int i = 1; i < n; i++)
if (vet[i] > maior) {
maior = vet[i];
pos = i;
}
return pos;
}
int main() {
int n;
scanf("%d", &n);
int vet[n];
for (int i = 0; i < n; i++)
scanf("%d", &vet[i]);
int pos = maior(vet, n);
printf("Maior: %d, Posicao: %d\n", vet[pos], pos);
return 0;
}
