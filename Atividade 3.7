int maior(int vet[], int n) {
int maior = vet[0], pos = 0;
for (int i = 1; i &lt; n; i++)
if (vet[i] &gt; maior) {
maior = vet[i];
pos = i;
}
return pos;
}
int main() {
int n;
scanf(&quot;%d&quot;, &amp;n);
int vet[n];
for (int i = 0; i &lt; n; i++)
scanf(&quot;%d&quot;, &amp;vet[i]);
int pos = maior(vet, n);
printf(&quot;Maior: %d, Posicao: %d\n&quot;, vet[pos], pos);
return 0;
}
