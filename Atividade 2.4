int somaVetor(int vetor[], int tamanho);
int main() {
int vetor[3];
printf(&quot;Digite três números inteiros:\n&quot;);

for (int i = 0; i &lt; 3; i++) {
printf(&quot;Número %d: &quot;, i + 1);
scanf(&quot;%d&quot;, &amp;vetor[i]);
}

int resultado = somaVetor(vetor, 3);
